<plugin 
  xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-plugin-u-share" version="1.0.1">
  <name>UShare</name>
  <description>Cordova Plugin for Umeng Share</description>
  <license>ISC</license>
  <keywords>cordova,umeng,social,share</keywords>
  <js-module src="www/UShare.js" name="UShare">
    <clobbers target="UShare" />
  </js-module>
  <preference name="IOS_KEY" />
  <preference name="ANDROID_KEY" />
  <platform name="ios">
    <pods-config ios-min-version="9.0" use-frameworks="true">
      <source url="https://github.com/CocoaPods/Specs.git"/>
      <source url="https://github.com/aliyun/aliyun-specs.git"/>
    </pods-config>
    <pod name="UMengUShare/UI" />
    <config-file target="config.xml" parent="/*">
      <feature name="UShare">
        <param name="ios-package" value="UShare" />
      </feature>
      <preference name="IOS_KEY" value="$IOS_KEY" />
      <preference name="ANDROID_KEY" value="$ANDROID_KEY" />
    </config-file>
    <!-- <config-file target="*-Info.plist" parent="LSApplicationQueriesSchemes">
      <string>访问相机</string>
